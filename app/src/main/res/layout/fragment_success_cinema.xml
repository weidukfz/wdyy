<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@mipmap/com_icon_loc_white_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:layout_marginLeft="@dimen/dp_54"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"/>

        <LinearLayout
            android:id="@+id/cinema_linearLayout_search"
            android:layout_width="@dimen/dp_220"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_m_172"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_edit_search">

            <ImageView
                android:id="@+id/cinema_search_img"
                android:layout_width="@dimen/dp_24"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/com_icon_search_default"/>

            <EditText
                android:id="@+id/cinema_search_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:hint="XX影院"
                android:textColorHint="#fff"
                android:background="@null"
                />

            <TextView
                android:id="@+id/cinema_search_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="搜索"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#fff"/>
        </LinearLayout>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/cinema_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cinema_recommend"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:text="推荐影院"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:background="@drawable/cinema_table"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/cinema_near"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:text="附近影院"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333"
            android:background="@drawable/cinema_table"
            android:layout_marginLeft="@dimen/dp_32"
            />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/cinema_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>
