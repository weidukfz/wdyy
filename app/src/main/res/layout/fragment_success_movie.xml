<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:background="@mipmap/bg_two_hdpi"
                >

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_marginTop="@dimen/dp_85"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/wodejiandie"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:id="@+id/movie_image_next_hot"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <HorizontalScrollView
                android:layout_below="@id/movie_image_next_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </HorizontalScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在热映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:id="@+id/movie_image_next_ing"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <HorizontalScrollView
                android:layout_below="@id/movie_image_next_ing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </HorizontalScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将上映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:id="@+id/movie_image_next_will"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <HorizontalScrollView
                android:layout_below="@id/movie_image_next_will"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
